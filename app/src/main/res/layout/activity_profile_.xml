<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Activity">

    <Button
        android:id="@+id/addstud"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Student"
        android:background="@drawable/button_design"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/sem_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/add_stud"
        android:text="Semester"
        android:background="@drawable/button_design"
        android:layout_below="@+id/addstud"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/add_admin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Add Admin"
        android:background="@drawable/button_design"
        android:layout_below="@+id/sem_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/upload_notice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/add_stud"
        android:text="Upload Notice"
        android:background="@drawable/button_design"
        android:layout_below="@+id/add_admin"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>