<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Stud_Activity">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginLeft="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/br"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:padding="5dp"
        android:text="Name"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/name_text"
        android:background="@drawable/input_design2"
        />

    <TextView
        android:id="@+id/reg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/name"
        android:padding="5dp"
        android:text="Reg"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/reg_text"
        android:background="@drawable/input_design2"
        />

    <TextView
        android:id="@+id/branch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/reg"
        android:padding="5dp"
        android:text="Branch"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/branch_text"
        android:background="@drawable/input_design2"
        />

    <TextView
        android:id="@+id/catg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/branch"
        android:padding="5dp"
        android:text="Category"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/catg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/catg_text"
        android:background="@drawable/input_design2"
        />
    <TextView
        android:id="@+id/DOB_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/catg"
        android:padding="5dp"
        android:text="DOB"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/DOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/DOB_text"
        android:background="@drawable/input_design2"
        />

    <TextView
        android:id="@+id/session_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/DOB"
        android:padding="5dp"
        android:text="Session"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/session_text"
        android:background="@drawable/input_design2"
        />
    <TextView
        android:id="@+id/mobile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/session"
        android:padding="5dp"
        android:text="Mobile"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/mobile_text"
        android:background="@drawable/input_design2"
        />

    <TextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/mobile"
        android:padding="5dp"
        android:text="Address"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/add_text"
        android:background="@drawable/input_design2"
        />



    <Button
        android:id="@+id/add_stud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="ADD STUDENT"
        android:background="@drawable/input_design"
        />

</RelativeLayout>